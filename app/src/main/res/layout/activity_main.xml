<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/i4"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/glass_card_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIC TAC TOE"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/font_3"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <!-- Score Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/player_card_background"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PLAYER X"
                    android:textSize="14sp"
                    android:textColor="@color/player_x_color"
                    android:gravity="center"
                    android:fontFamily="@font/font_ghar" />

                <TextView
                    android:id="@+id/playerXScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/player_x_color"
                    android:gravity="center"
                    android:fontFamily="@font/font_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/player_card_background"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PLAYER O"
                    android:textSize="14sp"
                    android:textColor="@color/player_o_color"
                    android:gravity="center"
                    android:fontFamily="@font/font_ghar" />

                <TextView
                    android:id="@+id/playerOScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/player_o_color"
                    android:gravity="center"
                    android:fontFamily="@font/font_3" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Game Mode Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/glass_card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode: "
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_3"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/twoPlayerButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="2 PLAYERS"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/mode_button_selected"
            android:fontFamily="@font/font_ghar" />

        <Button
            android:id="@+id/aiPlayerButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="VS AI"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/mode_button_unselected"
            android:fontFamily="@font/font_ghar" />

    </LinearLayout>

    <!-- AI Difficulty Selection (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/difficultyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/glass_card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty: "
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_ghar"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/easyButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:text="EASY"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/difficulty_button_selected"
            android:fontFamily="@font/font_ghar" />

        <Button
            android:id="@+id/mediumButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="MEDIUM"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/difficulty_button_unselected"
            android:fontFamily="@font/font_ghar" />

        <Button
            android:id="@+id/hardButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:text="HARD"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/difficulty_button_unselected"
            android:fontFamily="@font/font_ghar" />

    </LinearLayout>

    <!-- Status Section -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player X's Turn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/status_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/font_ghar"
        android:elevation="4dp" />

    <!-- Game Board -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/board_background"
        android:padding="20dp"
        android:elevation="12dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

            <Button
                android:id="@+id/button01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

            <Button
                android:id="@+id/button02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/game_button_background"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_ghar"
                android:elevation="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="RESET GAME"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/reset_button_background"
            android:fontFamily="@font/font_ghar"
            android:elevation="8dp" />

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="NEW GAME"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/new_game_button_background"
            android:fontFamily="@font/font_ghar"
            android:elevation="8dp" />

    </LinearLayout>

</LinearLayout>
